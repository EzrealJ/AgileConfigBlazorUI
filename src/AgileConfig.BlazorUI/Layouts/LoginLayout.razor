@inherits LayoutComponentBase

<AntDesign.Layout Style="padding:0;margin:0">
    <Content Style="background-color:white; min-height:500px">
        <AntDesign.Row Justify="space-around" Align="middle" style="padding:50px 0">
            <AntDesign.Col class="allCenter">
                <img src="/assets/logo.svg" width="240" height="240" />
                <AntDesign.Title Level="1">@Consts.Production.PRODUCTION_NAME</AntDesign.Title>
                <AntDesign.Title Level="4">@Consts.Production.PRODUCTION_DESCRIPTION</AntDesign.Title>
            </AntDesign.Col>
        </AntDesign.Row>
        <AntDesign.Row>
            <AntDesign.Col Span="24">
                <div>
                    @Body
                </div>
            </AntDesign.Col>
        </AntDesign.Row>
    </Content>
</AntDesign.Layout>


