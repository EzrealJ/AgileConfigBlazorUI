@using AgileConfig.UIApiClient
<Modal Title="从JSON文件导入" Visible="@Visible" OnOk="@OnOkAsync" OnCancel=@Cancel Width="700">
    <Upload Action="@UploadUrl"
            Name="files"
            Drag
            Headers=@UploadHeaders
            OnSingleCompleted="OnSingleCompleted">
        <p class="ant-upload-drag-icon">
            <Icon Type="inbox" />
        </p>
        <p class="ant-upload-text">Click or drag file to this area to upload</p>
        <p class="ant-upload-hint">
            Support for a single or bulk upload. Strictly prohibit from uploading company data or other
            band files
        </p>
    </Upload>
    <Divider />
    <Table DataSource=@_dataSourceDic.Values>
        <AntDesign.Column Title="组" DataIndex="@nameof(context.Group)" TData="string" />
        <AntDesign.Column Title="键" DataIndex="@nameof(context.Key)" TData="string" />
        <AntDesign.Column Title="值" DataIndex="@nameof(context.Value)" TData="string" />
        <ActionColumn>
            <Button Danger OnClick=@(_=>DeleteItem(context.Key))>删除此项</Button>
        </ActionColumn>
    </Table>
</Modal>

